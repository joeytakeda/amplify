<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Podcast</th>
            <th>Run Time</th>
        </tr>
    </thead>
    <tbody>
        {% for episode in episodes %}
            <tr>
                <td> {{ episode.slug }} -
                    <a href="{{ path('episode_show', { 'id': episode.id }) }}">
                        {{ episode.title }}
                    </a>
                </td>
                <td>
                    <a href='{{ path('podcast_show', {'id': episode.podcast.id}) }}'>
                        {{ episode.podcast }}
                    </a>
                </td>
                <td>
                    {{ episode.runTime }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
