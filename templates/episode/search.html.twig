{% extends 'base.html.twig' %}

{% block title %}Episode Search{% endblock %}

 {% block pageheader %}
     <h1>Episode Search</h1>
     {% if episodes|length %}
         <p class="count">
             Displaying {{ episodes|length }} episodes of {{ episodes.getTotalItemCount }} total.
         </p>
     {% endif %}
 {% endblock %}

{% block body %}

    <form method="get" action="{{ path('episode_search') }}" class="form-horizontal">
        <fieldset>
            <legend>Search</legend>
            <div class='form-group'>
                <label class='col-sm-2 control-label' for='q'>Search term</label>
                <div class='col-sm-10'>
                    <div class='input-group'>
                        <input type='text' name='q' id='q' class='form-control' value='{{ q }}'>
                        <span class="input-group-btn">
                            <button class="btn btn-primary" type="submit">
                                <span class='glyphicon glyphicon-search'></span>
                                Search
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <p> Full text searching options, if available:</p>
            <ul>
                <li><code>shakespeare</code> - shakespeare should be present, but might not be</li>
                <li><code>shakes*</code> - words starting with shakes should be present</li>
                <li><code>+agnes</code> - agnes must be present</li>
                <li><code>-fisher</code> - fisher must not be present</li>
                <li>Combinations are OK: <code>+agnes -fisher</code> finds Anges who isn't a Fisher</li>
                <li>Phrases are OK: <code>"nee agnes"</code> finds rows that contain the literal phrase.
            </ul>
        </fieldset>
    </form>

    {% if episodes|length %}
        <table class="table table-bordered table-condensed table-hover table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Number</th>
                    <th>Publication Date</th>
                    <th>Run Time</th>
                    <th>Title</th>
                    <th>Alternative Title</th>
                    <th>Language</th>
                    <th>Tags</th>
                    <th>References</th>
                    <th>Copyright</th>
                    <th>Transcript</th>
                    <th>Abstract</th>
                </tr>
            </thead>
            <tbody>
                {% for episode in episodes %}
                    <tr>

                        <td>
                            <a href="{{ path('episode_show', { 'id': episode.id }) }}">
                                {{ episode.id }}
                            </a>
                        </td>
                        <td>
                            {{ episode.number }}
                        </td>

                        <td>{% if episode.date %}{{ episode.date|date('Y-m-d') }}{% endif %}</td>

                        <td>
                            {{ episode.runTime }}
                        </td>

                        <td>
                            {{ episode.title }}
                        </td>

                        <td>
                            {{ episode.alternativeTitle }}
                        </td>

                        <td>
                            {{ episode.language }}
                        </td>

                        <td>{% if episode.tags %}{{ episode.tags|join(', ') }}{% endif %}</td>

                        <td>
                            {{ episode.references }}
                        </td>

                        <td>
                            {{ episode.copyright }}
                        </td>

                        <td>
                            {{ episode.transcript }}
                        </td>

                        <td>
                            {{ episode.abstract }}
                        </td>

                    </tr>
                {% endfor %}
            </tbody>
        </table>


        <div class="navigation">
            {{ knp_pagination_render(episodes) }}
        </div>
    {% endif %}

{% endblock %}

