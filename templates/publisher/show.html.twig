{% extends 'base.html.twig' %}

{% block title %}Publisher Details {% endblock %}

 {% block pageheader %}
     <h1>Publisher Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_CONTENT_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('publisher_edit', {'id': publisher.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('publisher_delete', {'id': publisher.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ publisher.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ publisher.name }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ publisher.location }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ publisher.website }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ publisher.description }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ publisher.contact }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ publisher.created|date }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ publisher.updated|date }}</td>
            </tr>
        </tbody>
    </table>

    {% if publisher.podcasts|length %}
    <h2>Podcasts</h2>
    <ul>
        {% for podcast in publisher.podcasts %}
            <li>
                <a href='{{ path('podcast_show', {'id': podcast.id}) }}'>
                    {{ podcast }}
                </a>
            </li>
        {% endfor %}
    </ul>
    {% endif %}

    {% if publisher.seasons|length %}
        <h2>Seasons</h2>
        <ul>
            {% for season in publisher.seasons %}
                <li>
                    <a href='{{ path('season_show', {'id': season.id}) }}'>
                        {{ season }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}


{% endblock %}
