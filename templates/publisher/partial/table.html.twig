<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Location</th>
            <th>Website</th>
        </tr>
    </thead>
    <tbody>
        {% for publisher in publishers %}
            <tr>
                <td>
                    <a href="{{ path('publisher_show', { 'id': publisher.id }) }}">
                        {{ publisher.name }}
                    </a>
                </td>
                <td>
                    {{ publisher.location }}
                </td>

                <td>
                    {{ publisher.website }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
