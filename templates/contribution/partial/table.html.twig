<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Person</th>
            <th>Role</th>
            <th>Episode</th>
            <th>Season</th>
            <th>Podcast</th>
        </tr>
    </thead>
    <tbody>
        {% for contribution in contributions %}
            <tr>
                <td>
                    <a href="{{ path('contribution_show', { 'id': contribution.id }) }}">
                        {{ contribution.id }}
                    </a>
                </td>
                <td>
                    <a href='{{ path("person_show", {"id": contribution.person.id}) }}'>{{ contribution.person }}</a>
                </td>
                <td>
                    <a href='{{ path("contributor_role_show", {"id": contribution.contributorRole.id}) }}'>{{ contribution.contributorRole }}</a>
                </td>
                <td>
                    {% if contribution.episode %}
                    <a href='{{ path("episode_show", {"id": contribution.episode.id}) }}'>{{ contribution.episode }}</a>
                    {% endif %}
                </td>
                <td>
                    {% if contribution.season %}
                    <a href='{{ path("season_show", {"id": contribution.season.id}) }}'>{{ contribution.season }}</a>
                    {% endif %}
                </td>
                <td>
                    {% if contribution.podcast %}
                    <a href='{{ path("podcast_show", {"id": contribution.podcast.id}) }}'>{{ contribution.podcast }}</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
