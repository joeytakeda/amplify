{% extends 'base.html.twig' %}

{% block title %}Season List{% endblock %}

{% block pageheader %}
    <h1>Season List</h1>
    <p class="count">
        Displaying {{ seasons|length }} seasons of {{ seasons.getTotalItemCount }} total.
    </p>
{% endblock %}

{% block body %}

    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            {% if is_granted('ROLE_CONTENT_ADMIN') %}
                <a href="{{ path('season_new') }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> New </a>
            {% endif %}

            <a href="{{ path('season_search') }}" class="btn btn-default">
                <span class="glyphicon glyphicon-search"></span> Search </a>
        </div>
    </div>

    <table class="table table-bordered table-condensed table-hover table-striped">
        <thead>
            <tr>
                <th>Podcast</th>
                <th>Title</th>
                <th>Episodes</th>
                <th>Preserved</th>
            </tr>
        </thead>
        <tbody>
            {% for season in seasons %}
                <tr>

                    <td>
                        <a href='{{ path('podcast_show', {'id': season.podcast.id}) }}'>
                            {{ season.podcast }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ path('season_show', { 'id': season.id }) }}">
                            S{{ season.number|format_number({min_integer_digit: 2}) }} - {{ season.title }}
                        </a>
                    </td>
                    <td>
                        {{ season.episodes|length }}
                    </td>
                    <td>
                        {{ season.preserved ? 'Yes' : 'No' }}
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="navigation">
        {{ knp_pagination_render(seasons) }}
    </div>

{% endblock %}
