{% extends 'base.html.twig' %}

{% block title %}Season Details {% endblock %}

 {% block pageheader %}
     <h1>Season Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('season_edit', {'id': season.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('season_delete', {'id': season.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ season.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Podcast</th>
                <td>
                    <a href='{{ path('podcast_show', {'id': season.podcast.id}) }}'>
                        {{ season.podcast }}
                    </a>
                </td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>
                    {% if season.publisher %}
                        <a href='{{ path('publisher_show', {'id': season.publisher}) }}'>
                            {{ season.publisher }}
                        </a>
                    {% else %}
                    <a href='{{ path('publisher_show', {'id': season.podcast.publisher}) }}'>
                        {{ season.podcast.publisher }}
                    </a>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Number</th>
                <td>{{ season.number }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ season.title }}</td>
            </tr>
            <tr>
                <th>Alternative Title</th>
                <td>{{ season.alternativeTitle }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ season.description }}</td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ season.created|date }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ season.updated|date }}</td>
            </tr>
        </tbody>
    </table>

    {% if season.episodes|length > 0 %}
    <h2>Episodes</h2>
    <ol>
        {% for episode in season.episodes %}
        <li>
            <a href='{{ path('episode_show', {'id': episode.id}) }}'>
                {{ episode }}
            </a>
        </li>
        {% endfor %}
    </ol>
    {% endif %}

    {% if season.contributions|length > 0 %}
        <h2>Contributors</h2>
        <ul>
            {% for contribution in season.contributions %}
                <li>
                    <a href='{{ path('person_show', {'id': contribution.person.id}) }}'>
                        {{ contribution.person -}}
                    </a>
                    {{ contribution.contributorRole }}
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
