{% extends 'base.html.twig' %}

{% block title %}Podcast Details {% endblock %}

 {% block pageheader %} 
    <h1>Podcast Details</h1>
 {% endblock %} 

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
    <div class='btn-toolbar pull-right'>
        <div class='btn-group'>
            <a href="{{ path('podcast_edit', {'id': podcast.id }) }}" class="btn btn-default">
                <span class="glyphicon glyphicon-edit"></span> Edit
            </a>
        </div>
        <div class='btn-group'>
            <form class='delete-form' method="post" action="{{ path('podcast_delete', {'id': podcast.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                <input type="hidden" name="_method" value="DELETE">
                <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ podcast.id) }}">
                <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
            </form>
        </div>
    </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Title</th>
                <td>{{ podcast.title }}</td>
            </tr>
        <tr>
                <th>Alternative Title</th>
                <td>{{ podcast.alternativeTitle }}</td>
            </tr>
        <tr>
                <th>Explicit</th>
                <td>{% if podcast.explicit %}Yes{% else %}No{% endif %}</td>
            </tr>
        <tr>
                <th>Description</th>
                <td>{{ podcast.description }}</td>
            </tr>
        <tr>
                <th>Copyright</th>
                <td>{{ podcast.copyright }}</td>
            </tr>
        <tr>
                <th>Category</th>
                <td>{{ podcast.category }}</td>
            </tr>
        <tr>
                <th>Website</th>
                <td>{{ podcast.website }}</td>
            </tr>
        <tr>
                <th>Rss</th>
                <td>{{ podcast.rss }}</td>
            </tr>
        <tr>
                <th>Tags</th>
                <td>{% if podcast.tags %}{{ podcast.tags|join(', ') }}{% endif %}</td>
            </tr>
                <tr>
            <th>Created</th>
            <td>{{ podcast.created|date }}</td>
        </tr>
        <tr>
            <th>Updated</th>
            <td>{{ podcast.updated|date }}</td>
        </tr>
        </tbody>
    </table>

{% endblock %}
