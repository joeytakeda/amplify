{% extends 'base.html.twig' %}

{% block title %}Person Details {% endblock %}

 {% block pageheader %}
     <h1>Person Details</h1>
 {% endblock %}

{% block body %}

    {% if is_granted('ROLE_ADMIN') %}
        <div class='btn-toolbar pull-right'>
            <div class='btn-group'>
                <a href="{{ path('person_edit', {'id': person.id }) }}" class="btn btn-default">
                    <span class="glyphicon glyphicon-edit"></span> Edit </a>
            </div>
            <div class='btn-group'>
                <form class='delete-form' method="post" action="{{ path('person_delete', {'id': person.id }) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                    <input type="hidden" name="_method" value="DELETE">
                    <input type="hidden" name="_token" value="{{ csrf_token("delete" ~ person.id) }}">
                    <button class="btn btn-danger"><span class="glyphicon glyphicon-trash"></span> Delete</button>
                </form>
            </div>
        </div>
    {% endif %}

    <table class="table table-bordered table-condensed table-hover table-striped">
        <tbody>
            <tr>
                <th>Full name</th>
                <td>{{ person.fullname }}</td>
            </tr>
            <tr>
                <th>Sortable Name</th>
                <td>{{ person.sortableName }}</td>
            </tr>
            <tr>
                <th>Affiliation</th>
                <td>{{ person.affiliation }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ person.location }}</td>
            </tr>
            <tr>
                <th>Bio</th>
                <td>{{ person.bio }}</td>
            </tr>
            <tr>
                <th>Links</th>
                <td>
                    {% for link in person.links %}
                        <a href='{{ link }}'>{{ link }}</a><br/>
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Created</th>
                <td>{{ person.created|date }}</td>
            </tr>
            <tr>
                <th>Updated</th>
                <td>{{ person.updated|date }}</td>
            </tr>
        </tbody>
    </table>

    {% if person.contributions %}
        <h2>Contributions</h2>
        <dl>
            {% for contribution in person.contributions %}
                <dt>
                    {{ contribution.contributorRole }}
                </dt>
                <dd>
                    {% if contribution.podcast %}
                        Podcast <a href='{{ path('podcast_show', {'id': contribution.podcast.id}) }}'>
                        {{ contribution.podcast }}</a>
                    {% endif %}
                    {% if contribution.season %}
                        Season <a href='{{ path('season_show', {'id': contribution.season.id}) }}'>
                        {{ contribution.season }}</a>
                    {% endif %}
                    {% if contribution.episode %}
                        Episode <a href='{{ path('episode_show', {'id': contribution.episode.id}) }}'>
                        {{ contribution.episode }}</a>
                    {% endif %}
                </dd>
            {% endfor %}
        </dl>
    {% endif %}

{% endblock %}
