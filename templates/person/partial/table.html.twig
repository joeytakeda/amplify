<table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
        <tr>
            <th>Fullname</th>
            <th>Institution</th>
            <th>Location</th>
        </tr>
    </thead>
    <tbody>
        {% for person in people %}
            <tr>
                <td>
                    <a href="{{ path('person_show', { 'id': person.id }) }}">
                        {{ person.fullname }}
                    </a>
                </td>
                <td>
                    {% if person.institution %}
                        <a href='{{ path('institution_show', {'id': person.institution.id}) }}'>
                            {{ person.institution }}
                        </a>
                    {% endif %}
                </td>
                <td>
                    {{ person.location }}
                </td>
            </tr>
        {% endfor %}
    </tbody>
</table>
